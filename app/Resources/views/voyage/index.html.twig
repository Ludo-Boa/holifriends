{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voyage list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Destination</th>
                <th>Datedepart</th>
                <th>Nombrejours</th>
                <th>Cout</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voyage in voyages %}
            <tr>
                <td><a href="{{ path('voyage_show', { 'id': voyage.id }) }}">{{ voyage.id }}</a></td>
                <td>{{ voyage.nom }}</td>
                <td>{{ voyage.destination }}</td>
                <td>{% if voyage.dateDepart %}{{ voyage.dateDepart|date('Y-m-d') }}{% endif %}</td>
                <td>{{ voyage.nombreJours }}</td>
                <td>{{ voyage.cout }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('voyage_show', { 'id': voyage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('voyage_edit', { 'id': voyage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voyage_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
